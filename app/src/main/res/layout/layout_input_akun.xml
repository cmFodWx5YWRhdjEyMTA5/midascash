<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView android:layout_width="match_parent"
        android:drawableTint="@color/colorAccentBlack"
        android:drawableLeft="@drawable/accountsresized"
        android:gravity="center"
        android:layout_gravity="center"
        android:paddingTop="10px"
        android:layout_height="wrap_content"
        android:text="Input Akun (Pengeluaran &amp; Pemasukan)                   "/>
    <View
        android:layout_marginTop="10px"
        android:layout_width="match_parent"
        android:layout_height="2sp"
        android:background="@color/colorAccentBlack"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0sp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textSize="8pt"
            android:text="Nomor Akun  :"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_width="0sp"
            android:layout_weight="2"
            android:textCursorDrawable="@null"
            android:backgroundTint="@color/colorPrimary"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0sp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textSize="8pt"
            android:text="Nama Akun  :"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_width="0sp"
            android:textCursorDrawable="@null"
            android:backgroundTint="@color/colorPrimary"
            android:layout_weight="2"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0sp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textSize="8pt"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="Kategori  :"
            android:layout_height="wrap_content" />
        <Spinner
            style="@style/Base.Widget.AppCompat.Spinner.Underlined"
            android:layout_width="0sp"
            android:layout_weight="2"
            android:layout_height="50sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0sp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textSize="8pt"
            android:text="Saldo Awal  :"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_width="0sp"
            android:layout_weight="2"
            android:textCursorDrawable="@null"
            android:backgroundTint="@color/colorPrimary"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <Button
        android:layout_marginTop="10sp"
        android:layout_width="match_parent"
        android:backgroundTint="@color/colorPrimary"
        android:textColor="@color/colorAccent"
        android:layout_height="wrap_content"
        android:text="Edit Akun Keuangan"/>

</LinearLayout>