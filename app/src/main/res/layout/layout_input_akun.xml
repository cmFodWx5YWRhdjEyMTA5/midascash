<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView android:layout_width="match_parent"
        android:drawableTint="@color/colorAccentBlack"
        android:drawableLeft="@drawable/accountsresized"
        android:gravity="center"
        android:textSize="9pt"
        android:layout_gravity="center"
        android:paddingTop="10sp"
        android:layout_height="wrap_content"
        android:text="Create New Account                               "/>
    <View
        android:layout_marginTop="10sp"
        android:layout_width="match_parent"
        android:layout_height="2sp"
        android:background="@color/colorAccentBlack"></View>

    <LinearLayout
        android:layout_marginLeft="20sp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0sp"
            android:layout_weight="1"
            android:textAlignment="textStart"
            android:textSize="8pt"
            android:text="Name  :"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_width="0sp"
            android:textCursorDrawable="@null"
            android:backgroundTint="@color/colorPrimary"
            android:layout_weight="2"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout

        android:layout_marginLeft="20sp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0sp"
            android:layout_weight="1"
            android:textAlignment="textStart"
            android:textSize="8pt"
            android:layout_gravity="center"
            android:text="Category  :"
            android:layout_height="wrap_content" />
        <Spinner
            style="@style/Base.Widget.AppCompat.Spinner.Underlined"
            android:layout_width="0sp"
            android:layout_weight="2"
            android:layout_height="50sp" />

    </LinearLayout>

    <LinearLayout

        android:layout_marginLeft="20sp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0sp"
            android:layout_weight="2"
            android:textAlignment="textStart"
            android:textSize="8pt"
            android:layout_gravity="center"
            android:text="Account Currency :"
            android:layout_height="wrap_content" />
        <Button
            android:layout_width="0sp"
            android:layout_weight="1"
            android:backgroundTint="@color/colorPrimary"
            android:text="IDR - RP"
            android:textColor="@color/colorAccent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="20sp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0sp"
            android:layout_weight="1.5"
            android:textAlignment="textStart"
            android:textSize="8pt"
            android:text="Initial Balance  :"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_width="0sp"
            android:layout_weight="2"
            android:textCursorDrawable="@null"
            android:backgroundTint="@color/colorPrimary"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IDR"
            android:paddingLeft="5sp"
            android:paddingRight="5sp"
            />

    </LinearLayout>
    <Button
        android:layout_marginTop="10sp"
        android:layout_width="match_parent"
        android:backgroundTint="@color/colorPrimary"
        android:textColor="@color/colorAccent"
        android:layout_height="wrap_content"
        android:text="Edit Accounts Created"/>

</LinearLayout>