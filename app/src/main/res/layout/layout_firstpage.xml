<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@color/colorPrimary">
    <LinearLayout
        android:layout_margin="40sp"
        android:background="@drawable/borderradius"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <TextView
            android:layout_marginTop="10sp"
            android:textStyle="bold"

            android:textAlignment="center"
            android:textSize="10pt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="First Time Setup"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <include layout="@layout/layout_miniip" android:id="@+id/coreip">
            </include>

            <include layout="@layout/layout_miniport" android:id="@+id/coreport">

            </include>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20sp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:textSize="10pt"
            android:layout_marginLeft="20sp"
            android:textAlignment="textStart"
            android:layout_width="0sp"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            android:text="Currency   :"/>
            <Button
                android:layout_width="0sp"
                android:layout_weight="1"
                android:text=" IDR- RP"
                android:id="@+id/corecurrency"
                android:textColor="@color/colorAccent"
                android:backgroundTint="@color/colorPrimary"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <TextView
            android:layout_marginTop="15sp"
            android:layout_marginBottom="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="10pt"
            android:textAlignment="center"
            android:textStyle="bold"
            android:text="Misc"/>
        <LinearLayout
            android:layout_marginTop="20sp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="10pt"
                android:layout_marginLeft="20sp"
                android:textAlignment="textStart"
                android:layout_width="0sp"
                android:layout_weight="1.5"
                android:layout_height="wrap_content"
                android:text="Daily Transaction Reminder ?"/>
            <ToggleButton
                android:layout_width="0sp"
                android:layout_weight="0.5"
                android:id="@+id/coredaily"
                android:textOn="YES"
                android:textOff="NO"
                android:textColor="@color/colorAccent"
                android:backgroundTint="@color/colorPrimary"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20sp"
            android:orientation="horizontal"
            android:id="@+id/lineartime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="10pt"
                android:layout_marginLeft="20sp"
                android:textAlignment="textStart"
                android:layout_width="0sp"
                android:layout_weight="1.7"
                android:layout_height="wrap_content"
                android:text="Reminder Time  :  "/>
            <EditText
                android:id="@+id/coretime"
                android:background="@drawable/bordersbg"
                android:layout_width="0sp"
                android:layout_weight="0.8"
                android:text="21:00"
                android:focusable="false"
                android:layout_marginRight="10sp"
                android:textAlignment="center"
                android:textColor="@color/colorAccentBlack"
                android:layout_height="40sp" />

        </LinearLayout>

        <Button
            android:id="@+id/coresave"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginTop="40sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@color/colorAccent"
            android:text="Proceed"
            />

    </LinearLayout>
</LinearLayout>