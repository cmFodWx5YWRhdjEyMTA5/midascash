<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_margin="3sp"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/white_transparency"
    android:elevation="1dp">

        <LinearLayout
            android:layout_marginLeft="5sp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="50sp"
                android:src="@drawable/add"
                android:layout_gravity="center"
                android:layout_height="50dp"
                android:id="@+id/incimagelistdata"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true" />
            <LinearLayout
                android:layout_width="0sp"
                android:layout_marginLeft="5sp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_height="match_parent">
                <TextView
                    android:id="@+id/inccatdata"
                    android:textSize="7pt"
                    android:layout_width="match_parent"
                    android:textAlignment="textStart"
                    android:text="category"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/incaccdata"
                    android:layout_width="match_parent"
                    android:textAlignment="textStart"
                    android:text="account"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/incfromdata"
                    android:textAlignment="textStart"
                    android:text="From"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0sp"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/incamountdata"
                        android:layout_width="match_parent"
                        android:textStyle="bold"
                        android:textAlignment="textEnd"
                        android:textSize="7pt"
                        android:text="Value"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/incdatedata"
                        android:layout_width="match_parent"
                        android:textAlignment="textEnd"
                        android:text="Date"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/incnotedata"
                        android:textAlignment="textEnd"
                        android:text="Note"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="6sp"
                android:id="@+id/colortype"
                android:background="@color/colorPrimaryGreen"
                android:layout_height="match_parent"
                android:layout_margin="5sp"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>