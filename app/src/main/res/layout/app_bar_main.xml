<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="midascash.indonesia.optima.prima.midascash.MainActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/content_main" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="230dp"
        android:layout_gravity="bottom|end"
        android:visibility="invisible"
        android:layout_marginRight="@dimen/fab_margin"
        app:backgroundTint="@color/colorPrimaryOrange"
        app:elevation="6dp"
        app:pressedTranslationZ="12dp"
        android:src="@drawable/transferbutton" />

    <TextView
        android:id="@+id/fab3text"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:textSize="9pt"
        android:text="Transfer"
        android:background="@drawable/borderradius"
        android:gravity="center"
        android:textColor="@color/colorAccent"
        android:padding="10sp"
        android:paddingStart="20sp"
        android:paddingEnd="20sp"
        android:textAlignment="center"
        android:backgroundTint="@color/colorPrimary"
        android:layout_marginBottom="235dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginRight="70dp"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="160dp"
        android:layout_gravity="bottom|end"
        android:layout_marginRight="@dimen/fab_margin"
        app:backgroundTint="@color/colorPrimaryGreen"
        android:visibility="invisible"
        app:elevation="6dp"
        app:pressedTranslationZ="12dp"
        android:src="@drawable/ic_add_white_24dp" />
    <TextView
        android:id="@+id/fab2text"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:text="Income"
        android:textSize="9pt"
        android:background="@drawable/borderradius"
        android:gravity="center"
        android:textColor="@color/colorAccent"
        android:padding="10sp"
        android:paddingStart="20sp"
        android:paddingEnd="20sp"
        android:textAlignment="center"
        android:backgroundTint="@color/colorPrimary"
        android:layout_marginBottom="165dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginRight="70dp"/>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="90dp"
        android:layout_gravity="bottom|end"
        android:visibility="invisible"
        android:layout_marginRight="@dimen/fab_margin"
        app:elevation="6dp"
        app:backgroundTint="@color/colorPrimaryRed"
        app:pressedTranslationZ="12dp"
        android:src="@drawable/ic_remove_white_24dp" />
    <TextView
        android:textSize="9pt"
        android:id="@+id/fab1text"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:text="Expense"
        android:layout_height="wrap_content"
        android:background="@drawable/borderradius"
        android:gravity="center"
        android:textColor="@color/colorAccent"
        android:padding="10sp"
        android:paddingStart="20sp"
        android:paddingEnd="20sp"
        android:textAlignment="center"
        android:backgroundTint="@color/colorPrimary"
        android:layout_marginBottom="95dp"
        android:layout_gravity="bottom|end"
        android:layout_marginRight="70dp"/>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        app:elevation="6dp"
        app:backgroundTint="@color/colorPrimary"
        app:pressedTranslationZ="12dp"
        android:layout_margin="@dimen/fab_margin"
        android:src="@drawable/ic_add_white_24dp" />

</android.support.design.widget.CoordinatorLayout>
