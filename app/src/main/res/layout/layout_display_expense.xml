<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:gravity="center"
                    android:textStyle="bold"
                    android:id="@+id/allcurrency"
                    android:layout_width="wrap_content"
                    android:textSize="15pt"
                    android:layout_margin="6sp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/add"
                    android:text="$"/>

                <TextView
                    android:text="aaa"
                    android:id="@+id/expamountview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/expcattap"
                android:layout_height="wrap_content">
                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="34dp"
                    android:id="@+id/expcatpic"
                    android:layout_margin="6sp"
                    android:layout_height="34dp"
                    android:src="@drawable/add"
                    app:civ_border_color="#FF000000"/>
                <TextView
                    android:paddingLeft="10sp"
                    android:id="@+id/expcatname"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Category Selection"
                    android:gravity="center"
                    android:textAlignment="textStart"
                    android:textSize="10pt"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/expacctap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="6sp"
                    android:background="@drawable/ic_account_balance_black_24dp"/>
                <TextView
                    android:id="@+id/expacctxt"
                    android:paddingLeft="10sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Account selection"
                    android:gravity="center"
                    android:textAlignment="textStart"
                    android:textSize="10pt"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/expdatetap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="6sp"
                    android:background="@drawable/ic_event_black_24dp"/>
                <TextView
                    android:paddingLeft="10sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="25/04/2018"
                    android:gravity="center"
                    android:id="@+id/expdateselect"
                    android:textAlignment="textStart"
                    android:textSize="10pt"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/allscheduled"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="6sp"
                    android:background="@drawable/ic_person_black_24dp"/>

                    <TextView
                        android:paddingLeft="10sp"
                        android:layout_gravity="center"
                        android:hint="From (Optional)"
                        android:backgroundTint="@color/colorAccentBlack"
                        android:id="@+id/expfromtxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="6sp"
                    android:background="@drawable/ic_mode_edit_black_24dp"/>

                    <TextView
                        android:paddingLeft="10sp"
                        android:layout_gravity="center"
                        android:id="@+id/expnotetxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Notes (Optional)" />

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:paddingLeft="10sp"
                android:text="Images"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginTop="10sp"
                    android:layout_marginLeft="10sp"
                    android:layout_width="100sp"
                    android:id="@+id/expimgdata"
                    android:layout_height="100sp" />
                <TextView
                    android:id="@+id/expimagenote"
                    android:layout_width="0sp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="No Images Available"
                    android:layout_gravity="center"
                    android:layout_height="match_parent" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>