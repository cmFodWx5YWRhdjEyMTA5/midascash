<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.TabLayout
        android:id="@+id/tabexpense"
        app:tabTextColor="@color/colorAccent"
        app:tabIndicatorColor="@color/colorAccent"
        app:tabSelectedTextColor="@color/colorAccent"
        android:background="@color/colorPrimaryRed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabMode="fixed" />

    <include layout="@layout/layout_transactionexpense"
        android:id="@+id/viewpagerexpense"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tabexpense"
        android:layout_above="@+id/llincome1"/>

    <LinearLayout
        android:id="@+id/llincome1"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <Button
            android:backgroundTint="@color/colorPrimaryRed"
            android:textSize="8pt"
            android:textColor="@color/colorAccent"
            android:text="Save"
            android:id="@+id/btnsaveexpenseedit"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <Button
            android:backgroundTint="@color/colorPrimaryRed"
            android:textSize="8pt"
            android:textColor="@color/colorAccent"
            android:text="Cancel"
            android:id="@+id/btncancelexpenseedit"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

    </LinearLayout>

</RelativeLayout>