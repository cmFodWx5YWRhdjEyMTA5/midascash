<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <View
                    android:id="@+id/lineLeft"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="#b8b8b8" />

                <TextView
                    android:id="@+id/link_to_register"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Select Date"
                    android:textColor="#525252"
                    android:textSize="20sp" />

                <View
                    android:id="@+id/lineRight"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="#b8b8b8" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10sp"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:padding="10sp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0sp"
                    android:padding="10sp"
                    android:gravity="center"
                    android:text="From"
                    android:textSize="8pt"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="0sp"
                    android:padding="10sp"
                    android:id="@+id/chartdate1"
                    android:background="@drawable/bordersbg"
                    android:textSize="8pt"
                    android:text="99/99/9999"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginBottom="10sp"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:padding="10sp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0sp"
                    android:padding="10sp"
                    android:gravity="center"
                    android:text="To"
                    android:textSize="8pt"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="0sp"
                    android:padding="10sp"
                    android:id="@+id/chartdate2"
                    android:background="@drawable/bordersbg"
                    android:textSize="8pt"
                    android:text="99/99/9999"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:id="@+id/chartdynamic"
                android:layout_height="wrap_content">


            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearadditional"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <View
                    android:id="@+id/lineLeft2"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="#b8b8b8" />

                <TextView
                    android:id="@+id/link_to_register2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Additional Options"
                    android:textColor="#525252"
                    android:textSize="20sp" />

                <View
                    android:id="@+id/lineRight2"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="#b8b8b8" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="10sp"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <android.support.v7.widget.AppCompatCheckBox
                    android:id="@+id/opt1"
                    android:visibility="gone"
                    android:theme="@style/CheckboxStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Use Category Instead"/>



                <android.support.v7.widget.AppCompatCheckBox
                    android:theme="@style/CheckboxStyle"
                    android:id="@+id/opt2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Show Your Own Transaction"/>

                <android.support.v7.widget.AppCompatCheckBox
                    android:id="@+id/opt3"
                    android:theme="@style/CheckboxStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Show Inactive Account"/>

            </LinearLayout>


        </LinearLayout>



    </ScrollView>



</LinearLayout>