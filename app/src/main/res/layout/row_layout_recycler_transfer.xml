<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_marginTop="4sp"
    android:id="@+id/trflinear"
    android:layout_marginLeft="4sp"
    android:layout_marginRight="4sp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:elevation="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="50sp"
                android:src="@drawable/baseline_swap_horizontal_circle_black_48dp"
                android:layout_gravity="center"
                android:layout_height="50dp"
                android:id="@+id/dataimagelistdata"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true" />
            <LinearLayout
                android:layout_width="0sp"
                android:layout_marginLeft="5sp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/trfsrc"
                        android:textSize="7pt"
                        android:layout_width="0sp"
                        android:layout_weight="1"
                        android:textAlignment="textStart"
                        android:text="Transfer acc"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:textSize="7pt"
                        android:layout_width="20sp"
                        android:textAlignment="center"
                        android:src="@drawable/baseline_play_arrow_black_18dp"
                        android:gravity="center"
                        android:layout_height="match_parent" />
                    <TextView
                        android:textSize="7pt"
                        android:id="@+id/trfdest"
                        android:layout_width="0sp"
                        android:layout_weight="1"
                        android:textAlignment="textEnd"
                        android:text="Transfer Acc"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_height="wrap_content">
                    <TextView
                        android:drawableLeft="@drawable/baseline_swap_vertical_circle_black_18dp"
                        android:id="@+id/trfrate"
                        android:textSize="7pt"
                        android:textStyle="bold"
                        android:layout_width="0sp"
                        android:layout_weight="1"
                        android:textAlignment="textStart"
                        android:text="Rate"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:textSize="7pt"
                        android:id="@+id/trfvalue"
                        android:layout_width="0sp"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:textAlignment="textEnd"
                        android:text="Value"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/trfnotes"
                        android:textSize="7pt"
                        android:layout_width="0sp"
                        android:layout_weight="1"
                        android:textAlignment="textStart"
                        android:text="Notes"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:textSize="7pt"
                        android:id="@+id/trfdate"
                        android:layout_width="0sp"
                        android:layout_weight="1"
                        android:textAlignment="textEnd"
                        android:text="Date"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="6sp"
                android:id="@+id/colortype"
                android:background="@color/colorPrimaryOrange"
                android:layout_height="match_parent"
                android:layout_margin="5sp"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>