<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:datePickerStyle">@style/datepicker</item>
    </style>

    <style name="textinput" parent="Theme.AppCompat.DayNight">
        <item name="android:textColor">@color/colorAccentBlack</item>
        <item name="android:textColorHint">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccentBlack</item>
        <item name="colorControlNormal">@color/colorAccentBlack</item>
        <item name="colorControlActivated">@color/colorAccentBlack</item>
        <item name="colorControlHighlight">@color/colorAccentBlack</item>
        <item name="android:textColorHighlight">@color/colorAccentBlack</item>
    </style>

    <style name="AppTheme.noanimation" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:animation">@null</item>
    </style>

    <style name="AppThemeactionbar" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorAccentBlack</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
    </style>

    <style name="AppThemeactionbargreen" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryGreen</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkGreen</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorAccentBlack</item>
        <item name="colorControlActivated">@color/colorPrimaryGreen</item>
        <item name="colorControlHighlight">@color/colorPrimaryGreen</item>
        <item name="android:datePickerStyle">@style/datepicker</item>
    </style>

    <style name="AppThemeactionbarorange" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryOrange</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkOrange</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorAccentBlack</item>
        <item name="colorControlActivated">@color/colorPrimaryOrange</item>
        <item name="colorControlHighlight">@color/colorPrimaryOrange</item>
        <item name="android:datePickerStyle">@style/datepicker</item>
    </style>

    <style name="AppThemeactionbarred" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryRed</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkRed</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorAccentBlack</item>
        <item name="colorControlActivated">@color/colorPrimaryRed</item>
        <item name="colorControlHighlight">@color/colorPrimaryRed</item>
        <item name="android:datePickerStyle">@style/datepicker</item>

    </style>

    <style name="AppThemeactionbarblack" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorAccentBlack</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkRed</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorAccentBlack</item>
        <item name="colorControlActivated">@color/colorAccentBlack</item>
        <item name="colorControlHighlight">@color/colorAccentBlack</item>
        <item name="android:datePickerStyle">@style/datepicker</item>

    </style>

    <style name="NoActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">@null</item>
        <item name="windowNoTitle">false</item>
        <item name="android:datePickerStyle">@style/datepicker</item>
    </style>

    <style name="datepickerred" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryRed</item>
    </style>
    <style name="datepickerblue" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>
    <style name="datepicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>
    <style name="datepickerorange" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryOrange</item>
    </style>
    <style name="datepickergreen" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryGreen</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppCompatAlertDialogStyle" parent="Base.Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorAccentBlack</item>
        <item name="android:textColorPrimary">@color/colorAccentBlack</item>
        <item name="android:textColorSecondary">@color/colorAccentBlack</item>
        <item name="android:background">@color/colorAccentWhite</item>
    </style>

    <style name="CheckboxStyle" parent="AppTheme">
        <item name="colorAccent">@color/colorPrimary</item>  // for checked
        <item name="android:textColorSecondary">@color/colorPrimary</item>  // for unchecked
    </style>

</resources>
